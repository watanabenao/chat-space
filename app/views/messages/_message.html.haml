.chat-main__message{"data-message-id": "#{message.id}"}
  %p.chat-main__message-name
    = message.user.name
  %p.chat-main__message-time
    = message.created_at  
  %p.chat-main_message-text
    = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
